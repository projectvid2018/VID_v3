<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- First Line -->
            <!--*** NID,Information and Education *** -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                <!--*** NID *** -->
                <android.support.v7.widget.CardView

                    android:onClick="Nid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/nidID"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/MediumSeaGreen"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"

                        android:padding="10dp"
                        >
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/nid"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/nid"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <!--***  Education *** -->

                <android.support.v7.widget.CardView
                    android:onClick="education"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/educationId"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/Salmon"
                    android:foreground="?android:attr/selectableItemBackground"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/education"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Education"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textStyle="bold"
                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <!--*** Information  *** -->
                <android.support.v7.widget.CardView
                    android:onClick="Information"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/informationId"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
